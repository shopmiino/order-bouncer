{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 1048576, 
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "YourAppName",
      "Environment": "Production"
    }
  },
  "AllowedHosts": "*",
  "Settings": {
    "Google": {
      "AccountKeyFilePath": "/tmp/credentials/GoogleCredentials.json",
      "Sheets": {
        "ApplicationName": "Order Bouncer",
        "OrderTrackSpreadSheetId": "1CYFegVar29y8UBLiU7FMdr5rFI7xReW44fbKEVe6TJY",
        "OrderTrackSpreadSheetGid": 0
      },
      "Drive": {
        "BaseFolderId": "1TPg6chLCZXIK19uyeA_5ccf21EWIAey3"
      }
    }
  },
  "Hangfire": {
    "SQLiteStorage": "Data Source=hangfire.db;"
  },
  "ConnectionStrings": {
    "Hangfire": "Data Source=hangfire.db;"
  }
}
