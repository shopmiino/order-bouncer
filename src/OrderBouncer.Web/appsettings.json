{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 1048576, 
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "Url": "http:loki:3100",
          "Labels" : {
            "app": "order-bouncer",
            "env": "production"
          },
          "batchinPeriod": 2000,
          "queueLimit": 10000
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "order-bouncer",
      "Environment": "production"
    }
  },
  "AllowedHosts": "*",
